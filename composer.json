{
    "name": "obaida/framework",
    "description": "A custom PHP MVC framework",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Obaida",
            "email": "obaidas103@example.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0|^8.1|^8.2",
        "monolog/monolog": "^3.0",
        "phpmailer/phpmailer": "^6.9",
        "symfony/var-dumper": "^6.0",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "filp/whoops": "^2.14"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Core/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "post-autoload-dump": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
